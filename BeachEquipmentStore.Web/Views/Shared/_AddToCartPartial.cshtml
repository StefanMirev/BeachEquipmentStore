@using System.Security.Claims
@using Microsoft.AspNetCore.Identity

<form method="post" asp-controller="Cart" asp-action="Add" asp-route-productId="@Model.Id" asp-route-userId="@User.GetId()">
    <div class="container">
        <div class="row align-items-end">
            <div class="col">
                <input type="number" class="form-control" name="quantity" value="1" required>
            </div>
            <div class="col">
                <button class="btn btn-primary btn-block" type="submit">Добави в количката</button>
            </div>
        </div>
    </div>
    @Html.AntiForgeryToken()
</form>