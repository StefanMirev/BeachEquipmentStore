@model AddressDetailsViewModel

@{
    ViewBag.Title = "Редакция на адрес";
}

<h2>@ViewBag.Title</h2>
<hr />

<div class="row">
    <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
        <partial name="_ManageNav" />
    </nav>
    <div role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
        <form method="post">
            <div class="form-group">
                <label for="name">Адрес</label>
                <input type="text" class="form-control" id="name" name="name" value="@Model.Name" required>
            </div>
            <div class="form-group">
                <label for="town">Град</label>
                <input type="text" class="form-control" id="town" name="town" value="@Model.Town" required>
            </div>
            <div class="form-group">
                <label for="zipCode">Пощенски код</label>
                <input type="text" class="form-control" id="zipCode" name="ZipCode" value="@Model.ZipCode" required>
            </div>
            <button style="margin-top: 5px;" type="submit" class="btn btn-primary" asp-route-addressId="@Model.Id">Запази промените</button>
            <a style="margin-left: 10px;"  asp-controller="Profile" asp-action="GetAddresses">Откажи промените</a>
            @Html.AntiForgeryToken()
        </form>
    </div>
</div>