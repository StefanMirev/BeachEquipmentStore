@model List<AddressViewModel>
@{
    ViewData["Title"] = "Edit Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Address</h1>

<nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
    <partial name="_ManageNav" />
</nav>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Адрес</th>
                <th>Град</th>
                <th>Пощенски код</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var address in Model)
            {
                <tr>
                    <td>@address.Name</td>
                    <td>@address.Town</td>
                    <td>@address.ZipCode</td>
                    <td>
                        <a asp-controller = "Profile" asp-action="EditAddress" asp-route-addressId="@address.Id">Edit</a> |
                        <a asp-controller="Profile" asp-action="DeleteAddress" asp-route-addressId="@address.Id" asp-route-userId="@User.GetId()">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No addresses found.</p>
}

<a asp-controller="Profile" asp-action="AddAddress">Add New Address</a>