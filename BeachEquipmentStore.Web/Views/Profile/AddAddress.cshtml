<h1>Add New Address</h1>

<nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
    <partial name="_ManageNav" />
</nav>
<form method="post">
    <div class="form-group">
        <label for="name">Адрес</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="form-group">
        <label for="town">Град</label>
        <input type="text" class="form-control" id="town" name="town" required>
    </div>
    <div class="form-group">
        <label for="zipCode">Пощенски код</label>
        <input type="text" class="form-control" id="zipCode" name="ZipCode" required>
    </div>
    <button type="submit" class="btn btn-primary" asp-route-userId="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Добави адрес</button>
</form>

<a asp-controller="Profile" asp-action="MyProfile" asp-route-userId ="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Обратно към профил</a>