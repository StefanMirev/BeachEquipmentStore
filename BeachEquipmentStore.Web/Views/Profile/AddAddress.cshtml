@{
    ViewBag.Title = "Добави адрес";
}

<h2>@ViewBag.Title</h2>
<hr />

<div class="row">
    <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
        <partial name="_ManageNav" />
    </nav>
    <div role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
        <form method="post" asp-controller="Profile" asp-action="AddAddress">
            <div class="form-group">
                <label for="name">Адрес</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="town">Град</label>
                <input type="text" class="form-control" id="town" name="town" required>
            </div>
            <div class="form-group">
                <label for="zipCode">Пощенски код</label>
                <input type="text" class="form-control" id="zipCode" name="zipCode" required>
            </div>
            <table style="margin:auto; width: 100%">
                <tr>
                    <td>
                        <div class="form-group">
                            <input type="checkbox" id="isPrimaryAddress" name="isPrimaryAddress" value="true">
                            <label for="isPrimaryAddress">Маркирай като основен адрес?</label>
                        </div>
                    </td>
                    <td style ="float:right">
                        <a class="btn btn-secondary" style="margin-top: 5px; margin-right: 10px" asp-controller="Profile" asp-action="MyProfile">Обратно към профил</a>
                        <button type="submit" class="btn btn-primary" style="margin-top: 5px; margin-left: 10px">Добави адрес</button>
                    </td>
                </tr>
            </table>
            @Html.AntiForgeryToken()
        </form>

    </div>
</div>