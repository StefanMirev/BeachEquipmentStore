@model List<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron jumbotron-fluid text-center">
    <h1 class="display-4">Ицо Бийч - магазин за летни забавления и усмивки</h1>
    <p class="lead">Подгответе се за невероятно плажно изживяване с нашите висококачествени плажни продукти!</p>
</div>
<hr />

<div class="container mt-5">
    <div class="row">
        @foreach (var product in Model)
        {
            <a asp-controller="Product" asp-action="GetSelectedProduct" asp-route-productId="@product.Id">
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@Url.Content(product.ImageUrl)" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Price.ToString("C")</p>

                        </div>
                    </div>
                </div>
            </a>
            @using System.Security.Claims
            @using Microsoft.AspNetCore.Identity

            <form method="post" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id">
                <input type="hidden" name="customerId" value="@User.GetId()" />
                <input type="number" name="quantity" value="1" />
                <button type="submit">Add to Cart</button>
            </form>
        }
    </div>
</div>