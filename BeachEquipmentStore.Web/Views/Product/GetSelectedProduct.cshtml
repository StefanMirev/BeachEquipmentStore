@model ExtendedProductViewModel

@{
    ViewBag.Title = Model.Name;
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" style="max-width: 100%;" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p>№: @Model.Barcode</p>
            <p>Категория: <a asp-action="All" asp-controller="Product" asp-route-categoryId="@Model.Category.Id">@Model.Category.Name</a></p>
            <p>Производител: <a asp-action="All" asp-controller="Product" asp-route-manufacturerId="@Model.Manufacturer.Id">@Model.Manufacturer.Name</a></p>
            <p>Цена: @Model.Price.ToString("C")</p>
            @{
                if (Model.Stock > 0)
                {
                    <p>В наличност</p>

                    <partial name="_AddToCartPartial" />
                }
                else
                {
                    <p>В момента избраният продукт не е в наличност!</p>
                }
            }
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <h3>Описание</h3>
            <p>@Model.Description</p>
        </div>
    </div>
</div>