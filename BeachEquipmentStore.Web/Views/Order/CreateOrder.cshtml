@model CreateOrderViewModel

<h2>Complete Order</h2>

<form method="post">
    <h3>Customer data</h3>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="PhoneNumber">Phone Number</label>
                <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" />
            </div>
        </div>
    </div>

    <h3>Address data</h3>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" value="@Model.AddressName" />
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Town">Town</label>
                <input type="text" class="form-control" id="Town" name="Town" value="@Model.Town" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="ZipCode">Zip Code</label>
                <input type="text" class="form-control" id="ZipCode" name="ZipCode" value="@Model.ZipCode" />
            </div>
        </div>
    </div>

    <h3>Cart Contents</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Артикул</th>
                <th>Количество</th>
                <th>Единична цена</th>
                <th>Общо за артикула</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td><img src="@product.ImageUrl" alt="@product.Name" style="max-width: 100px; max-height: 100px;" /></td>
                    <td>@product.Name</td>
                    <td>@product.Quantity</td>
                    <td>@product.Price.ToString("C")</td>
                    @{
                        decimal? totalProductPrice = product.Price * product.Quantity;
                        string formattedTotalProductPrice = string.Format("{0:C}", totalProductPrice);
                    }
                    <td>@formattedTotalProductPrice</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3">Обща сума:</th>
                @{
                    decimal? overallPrice = Model.Products.Sum(p => p.Price * p.Quantity);
                    string formattedOverallPrice = string.Format("{0:C}", overallPrice);
                }
                <th>@formattedOverallPrice</th>
            </tr>
        </tfoot>
    </table>

    <div class="row justify-content-end">
        <div class="col-md-6">
            <div class="form-group">
                <label for="DeliverySum">Delivery Sum</label>
                <p>@String.Format("{0:C}", 5.50)</p>
            </div>
            <div class="form-group">
                <label for="TotalSum">Total Sum</label>
                <p>@String.Format("{0:C}", (overallPrice + (decimal)5.50))</p>
            </div>
            <button type="submit" class="btn btn-primary">Complete Order</button>
        </div>
    </div>
</form>