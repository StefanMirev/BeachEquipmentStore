@model CreateOrderViewModel

<h2>Завърши поръчка</h2>

<form method="post">
    <h3>Customer data</h3>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <p>@Model.UserInfo.FirstName" <p/>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="LastName">Last Name</label>
                <p>@Model.UserInfo.LastName" <p/>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Email">Email</label>
                <p>@Model.UserInfo.Email" <p/>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="PhoneNumber">Phone Number</label>
                <p>@Model.UserInfo.PhoneNumber" <p/>
            </div>
        </div>
    </div>

    <h3>Address data</h3>
    @if (ViewBag.HasAddress)
    {
        <div class="form-group">
            <label for="Address">Address</label>
            <p>@Model.UserAddress!.Name" <p/>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Town">Town</label>
                   <p>@Model.UserAddress.Town" <p/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="ZipCode">Zip Code</label>
                    <p>@Model.UserAddress.ZipCode" <p/>
                </div>
            </div>
        </div>
    }
    else{
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" value="@Model.UserAddress?.Name" />
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Town">Town</label>
                <input type="text" class="form-control" id="Town" name="Town" value="@Model.UserAddress?.Town" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="ZipCode">Zip Code</label>
                <input type="text" class="form-control" id="ZipCode" name="ZipCode" value="@Model.UserAddress?.ZipCode" />
            </div>
        </div>
    </div>
    }

    <h3>Cart Contents</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Артикул</th>
                <th>Количество</th>
                <th>Единична цена</th>
                <th>Общо за артикула</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td><img src="@product.ImageUrl" alt="@product.Name" style="max-width: 100px; max-height: 100px;" /></td>
                    <td>@product.Name</td>
                    <td>@product.Quantity</td>
                    <td>@product.Price.ToString("C")</td>
                    @{
                        decimal? totalProductPrice = product.Price * product.Quantity;
                        string formattedTotalProductPrice = string.Format("{0:C}", totalProductPrice);
                    }
                    <td>@formattedTotalProductPrice</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3">Обща сума:</th>
                @{
                    decimal? overallPrice = Model.Products.Sum(p => p.Price * p.Quantity);
                    string formattedOverallPrice = string.Format("{0:C}", overallPrice);
                }
                <th>@formattedOverallPrice</th>
            </tr>
        </tfoot>
    </table>

    <div class="row justify-content-end">
        <div class="col-md-6">
            @{
                decimal? deliveryPrice = 5.50m;
                decimal? finalSum = overallPrice + deliveryPrice;
            }
            <div class="form-group">
                <label for="DeliverySum">Delivery Sum</label>
                <p>@String.Format("{0:C}", deliveryPrice)</p>
            </div>
            <div class="form-group">
                <label for="TotalSum">Total Sum</label>
                <p>@String.Format("{0:C}", finalSum)</p>
            </div>
            <button type="submit" class="btn btn-primary" asp-route-userId = "@User.GetId()" asp-route-hasAddress="@ViewBag.HasAddress" asp-route-totalSum="@finalSum">Complete Order</button>
        </div>
    </div>
</form>