@model List<UserViewModel>

<h2>Направи админ</h2>

<table>
    <thead>
        <tr>
            <th>Е-поща</th>
            <th>Име</th>
            <th>Фамилия</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                        <td><a asp-controller="User" asp-action="UpdateUserRole" asp-route-userId="@user.Id">Направи админ</a></td>
                </tr>
            }
        }
    </tbody>
</table>