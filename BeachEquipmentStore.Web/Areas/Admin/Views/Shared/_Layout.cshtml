<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <div class="row" style="margin-inline:auto; margin-block-start: 10px">
            <div class="col" style="display: flex; justify-content: center">
                <a type="button" asp-area="Admin" asp-controller="User" asp-action="MakeAdmin" class="btn btn-outline-primary btn-lg">Добави админ</a>
            </div>
            <div class="col" style="display: flex; justify-content: center">
                <a asp-area="Admin" asp-controller="Order" asp-action="Deliver" class="btn btn-outline-primary btn-lg">Завърши доставка</a>
            </div>
            <div class="col" style="display: flex; justify-content: center">
                <a asp-area="Admin" asp-controller="Product" asp-action="Restock" class="btn btn-outline-primary btn-lg">Възстанови запасите</a>
            </div>
            <div class="col" style="display: flex; justify-content: center">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-outline-primary btn-lg">Изход</button>
                </form>
            </div>
        </div>
        <hr class="my-4">
    </header>

    <div class="content-container">
        <main role="main" class="pb-0 mb-0">
            <div class="mx-4 px-4 my-1 py-1">
                @if (TempData.ContainsKey("Message"))
                {
                    <div class="alert alert-success" style="margin-top: 30px;">
                        @TempData["Message"]
                    </div>
                }

                @if (TempData.ContainsKey("ErrorMessage"))
                {
                    <div class="alert alert-danger" style="margin-top: 30px;">
                        @TempData["ErrorMessage"]
                    </div>
                }

                @RenderBody()   
            </div>
        </main>
    </div>
</body>
</html>
<script src="/_framework/aspnetcore-browser-refresh.js"></script>